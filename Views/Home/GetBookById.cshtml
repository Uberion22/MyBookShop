@model BookShop.Models.Book

@{

    ViewBag.Title = "Подробная информация о книге";
}
<h2> @Model.Name</h2>
<div>
    <div style="float: left; width: 30%;">
        <dl class="dl-horizontal">
            <dt></dt>
            <dd> <img src="@Model.ImageURL" alt="@Model.Name"></dd>
            <dt>Цена</dt>
            <dd>@Model.Price &#8381</dd>
        </dl>
    </div>
    <div style="float: right; width: 70%;">
        <dl class="dl-horizontal">
            <dt>Автор</dt>
            <dd>@Model.Author</dd>
            <dt>Жанр</dt>
            <dd>@Model.Genre</dd>
            <dt>Ссылка на страницу в Интернет, содержащую данный товар</dt>
            <dd>
                <a href="@Model.OriginalPageURL">@Model.OriginalPageURL</a>
            </dd>
            <dt>Дополнительное описание</dt>
            <dd>@Model.BookDescription</dd>
            <dt>Дата публикации(редактирования)</dt>
            <dd>@Model.PublicationDate</dd>
            <dt>Идентификатор в БД </dt>
            <dd>@Model.Id</dd>
        </dl>
        <div class="form-inline">
            <form asp-controller="Home" asp-action="GetBookById">
                    <input type="submit" class="btn btn-danger" value="Удалить" />
            </form>
            <a asp-controller="Home" asp-action="EditBook" class="btn btn-dark" asp-route-id="@Model.Id"> Редактировать книгу</a>              
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">На главную</a>
        </div>
    </div>
</div>