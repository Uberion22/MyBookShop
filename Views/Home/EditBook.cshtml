
@model BookShop.Models.Book;
@{
    ViewBag.Title = "Редактирование книги";
}

<form asp-action="EditBook" asp-controller="home" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Name" class="control-label"> Наименование книги</label>
        <input type="text" asp-for="Name" class="form-control" value=@Model.Name/>
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label">Цена</label>
        <input type="text"  asp-for="Price" class="form-control" value=@Model.Price />
        <span asp-validation-for="Price"></span>
    </div>
    <div class="form-group">
        <label asp-for="Author" class="control-label"> Автор</label>
        <input type="text" asp-for="Author" class="form-control" value=@Model.Author />
        <span asp-validation-for="Author"></span>
    </div>
    <div class="form-group">
        <label asp-for="Genre" class="control-label"> Жанр</label>
        <input type="text" asp-for="Genre" class="form-control" value=@Model.Genre/>
        <span asp-validation-for="Genre"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImageURL" class="control-label"> Сылка на обложку</label>
        <input type="text" asp-for="ImageURL" class="form-control" value=@Model.ImageURL/>
        <span asp-validation-for="ImageURL"></span>
    </div>
    <div class="form-group">
        <label asp-for="OriginalPageURL" class="control-label">Ссылка на сторонний ресурс содержащий данную книгу</label>
        <input type="text" asp-for="OriginalPageURL" class="form-control" value=@Model.OriginalPageURL/>
        <span asp-validation-for="OriginalPageURL"></span>
    </div>
    <div class="form-group">
        <label asp-for="BookDescription" class="control-label"> Анотация книги </label>
        <input type="text" asp-for="BookDescription" class="form-control" value=@Model.BookDescription/>
    </div>
    <div class="form-group">
        <label asp-for="PublicationDate" class="control-label"> Дата добавления(редактирования)</label>
        <input type="datetime" asp-for="PublicationDate" class="form-control" value=@DateTime.Now />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить изменения" class="btn btn-dark" />
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">На главную</a>
    </div>
</form>
@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}